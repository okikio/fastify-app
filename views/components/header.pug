include ./content.pug

mixin header(_page)
  - let page = _page || page;
  - let _tabs = page.tabs && page.tabs.values || [];
  - let _title = (page.title || "title").toUpperCase();

  header.header
    nav.navbar.navbar-fixed
      article.layout-contain.navbar-layout
        section.navbar-header
          +link({
            href: "/" + (dev && staticSite ? "index.html" : ""),
            class: "navbar-title",
            content: "JOSEPH!"
          })
        
        section.layout-spacer
        section.navbar-main
          ul.navbar-list
            each tab in _tabs
              - let _link = tab.a;
              - let _href = _link.href;
              - let _content = _link.content;
              - let _class = `navbar-link ${_title == _content ? "navbar-link-focus" : ""}`;

              li
                a(href=_href class=_class data-swup-preload)= _content
